# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Shopify (use one of the two options below)
SHOPIFY_SHOP_DOMAIN=your-store.myshopify.com
SHOPIFY_LOCATION_ID=12345678
SHOPIFY_WEBHOOK_SECRET=your-webhook-secret

# Option A – Legacy custom app (existing apps only; no new ones after Jan 2026)
# SHOPIFY_ACCESS_TOKEN=shpat_xxx

# Option B – Dev Dashboard app (recommended for new setups)
# SHOPIFY_CLIENT_ID=your-client-id
# SHOPIFY_CLIENT_SECRET=your-client-secret

# Option C – Storefront API (avoids 403; no token exchange). Same app → API credentials → Storefront API access token
# SHOPIFY_STOREFRONT_ACCESS_TOKEN=your-storefront-token

# Paymob
PAYMOB_API_KEY=your-api-key
PAYMOB_INTEGRATION_ID=your-integration-id
PAYMOB_HMAC_SECRET=your-hmac-secret
PAYMOB_IFRAME_URL=https://accept.paymob.com/api/acceptance/iframes/xxx

# App
NEXT_PUBLIC_APP_URL=https://your-app.com

# Admin (protect /admin and admin API)
ADMIN_SECRET=your-admin-secret
